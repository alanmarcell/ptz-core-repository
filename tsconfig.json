{
  "compilerOptions": {
    "module": "es6",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "target": "esnext",
    "sourceMap": true,
    "listFiles": false,
    "outDir": "dist-esnext/",
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true
  },
  "include": [
    "typings/**/*.d.ts",
    "src/**/*.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.test.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "baseUrl": "types",
  "typeRoots": [
    "types"
  ]
}
